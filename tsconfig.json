{
  "compilerOptions": {
     "lib": ["es2018"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "**/*.spec.ts"],
  "exclude": ["node_modules"]
}